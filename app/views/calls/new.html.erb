<h3> Crear nuevo llamado</h3>

<%= form_for(@call) do |f| %>
  <p>
    <%= f.label :nombre %><br/>
    <%= f.text_field :nombre, autofocus: true %>
  </p>
  <p>
    <%= f.label :centro %><br/>
    <%= f.select :centro, Call::CENTROS, class: 'form-control' %>
  </p>
  <p>

  <p>
    <%= f.submit "Crear Llamado" %> |
    <%= link_to "Cancelar", calls_path %>
  </p>
<% end %>
