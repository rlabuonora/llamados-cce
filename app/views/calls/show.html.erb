<div class="container">
    
    <div class="row">
      <h3>Llamado</h3>
      <p>Nombre: <%= @call.nombre if @call.nombre %></p>
      <p>Centro: <%= @call.centro if @call.centro %></p>
      <p>Publico: <%= @call.publico if @call.publico %></p>
      <p>Modalidad: <%= @call.modalidad if @call.modalidad %></p>

      <%= link_to "Editar Llamado", edit_call_path(@call), class: 'btn btn-primary' %>
      <%= link_to "Agregar Propuesta", new_call_proposal_path(@call), class: 'btn btn-primary' %>
      <%= link_to "Ver Propuestas", call_proposals_path(@call), class: 'btn btn-primary' %> 
        
    </div>
    <div class="container">
      <div class="row">
        <h3>Propuestas</h3>
        <div class="column">
        <table class="table">
        <tr>
          <th>Proveedor</th>
          <th>Usuario</th>
          <th>Institucion</th>
          <th>Propuesta</th>
          <th>Antecedentes</th>
          <th>Conocimiento</th>
        </tr>
        <tbody>
          <% @call.evaluations.each do |evaluation| %>
          <tr>
            <td>
              <%= evaluation.proposal.proveedor %>
            </td>
            <td>
              <%= evaluation.user.name if evaluation.user %>
            </td>
             <td>
              <%= evaluation.user.institucion if evaluation.user %>
            </td>
            <td>
              <%= evaluation.evaluatable.propuesta  %>
            </td>
             <td>
              <%= evaluation.evaluatable.antecedentes  %>
            </td>
            <td>
              <%= evaluation.evaluatable.conocimiento  %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
        </div>
        
      </div>
      
    </div>

</div>



